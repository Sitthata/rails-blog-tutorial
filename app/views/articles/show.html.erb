<div>
  <h1>Article</h1>
  <div>
    <h1><%= @article.title %></h1>
    <p><%= @article.body %></p>
    <%= link_to "Edit", edit_article_path(@article) %>
    <%= link_to "Delete", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>
  </div>
  <div>
    <h2>Comments</h2>
    <%= render @article.comments %>
    
    <%= render "comments/form", article: @article %>
  </div>
  <%= link_to "Back", articles_path %>
</div>